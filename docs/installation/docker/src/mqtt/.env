# MQTT Broker Configuration
MQTT_PORT=1883
MQTT_SSL_PORT=8883
MQTT_WS_PORT=9002

# Timezone
TZ=America/Chicago

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=./data/backups

# SSL Configuration (set to true to enable SSL)
ENABLE_SSL=false
SSL_CERT_PATH=./certs/server.crt
SSL_KEY_PATH=./certs/server.key
SSL_CA_PATH=./certs/ca.crt

# Authentication
DEFAULT_USERNAME=xmpro
# Note: Password is managed through passwords.txt file

# Logging
LOG_LEVEL=information
MAX_LOG_SIZE=10m
MAX_LOG_FILES=5

# Performance Tuning
MAX_CONNECTIONS=1000
MAX_QUEUED_MESSAGES=1000
MESSAGE_SIZE_LIMIT=268435456
